<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".app.WelcomeFragment">

    <TextView
        android:id="@+id/openFolderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open folder"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/openFilesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Open file"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/openFileFromInternalStorageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Open file from internal storage"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/openNewTerminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Open new Terminal"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/openEditorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Open Editor Settings"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/manageLanguagesSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Manage languages"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/openSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Open Settings"
        android:textSize="20sp" />

</LinearLayout>
